@model pr3_tradecompany_aspnet_mvc.Models.Enitites.Customer

@{
	ViewData["Title"] = "Редактирование заказчика";
}

<h1>Заказчик</h1>
<h4>Редактирование</h4>
<hr />

@if (Model is null)
{
	<p>Заказчик с заданным id не найден!</p>
}
else
{
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Edit">
				<div class="mt-3">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<label class="form-label">Идентификатор</label>
					<input type="text" class="form-control" asp-for="Id" readonly />
				</div>

				<div class="mt-3">
					<label class="form-label">Название компании</label>
					<input type="text" class="form-control" asp-for="CompanyName" />
				</div>

				<div class="mt-3">
					<label class="form-label">Адрес</label>
					<input type="text" class="form-control" asp-for="Address" />
				</div>

				<div class="mt-3">
					<label class="form-label">Телефон</label>
					<input type="text" class="form-control" asp-for="Phone" />
				</div>

				<div class="mt-3">
					<button class="btn btn-primary" type="submit">Сохранить</button>
					<button class="btn btn-danger" asp-controller="Customers" asp-action="Delete">Удалить</button>
				</div>


			</form>
		</div>
	</div>
}
<div>
	<a asp-action="Index" class="mt-3">Назад к списку</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}