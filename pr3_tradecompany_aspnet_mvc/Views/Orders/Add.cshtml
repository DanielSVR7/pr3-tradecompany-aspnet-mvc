@model pr3_tradecompany_aspnet_mvc.Models.Enitites.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Заказы</h1>
<h4>Создать</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3">
                <label class="form-label">Заказчик</label>
                <select asp-for="CustomerId" asp-items="@ViewBag.Customers" class="form-select">
                    <option disabled selected>--Выберите заказчика--</option>
                </select>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Дата и время</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Сумма</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="mt-3">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
