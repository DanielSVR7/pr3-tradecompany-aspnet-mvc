@model pr3_tradecompany_aspnet_mvc.Models.Enitites.Order

@{
    ViewData["Title"] = "Редактирование заказа";
}

<h1>Заказ</h1>
<h4>Редактирование</h4>
<hr />

@if (Model is null)
{
    <p>Заказ с заданным id не найден!</p>
}
else
{
    <div class="row">
        <div class="col-md-3">
            <form asp-action="Edit">
                <div class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label class="form-label">Идентификатор</label>
                    <input type="text" class="form-control" asp-for="Id" readonly />
                </div>
                <div class="mt-3">
                    <label class="form-label">Заказчик</label>
                    <select asp-for="CustomerId" asp-items="@ViewBag.Customers" class="form-select">
                    </select>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label class="form-label">Дата</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label class="form-label">Сумма</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <button class="btn btn-danger" asp-controller="Orders" asp-action="Delete">Удалить</button>
                </div>
            </form>
        </div>
    </div>
}
<div class="mt-3">
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
