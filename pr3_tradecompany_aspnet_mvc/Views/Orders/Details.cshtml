@model pr3_tradecompany_aspnet_mvc.Models.Enitites.Order

@{
    ViewData["Title"] = "Детали";
}

<h1>Заказ</h1>
<h4>Детали</h4>

@if (Model is null)
{
	<p>Заказ с заданным id не найден!</p>
	<div><a asp-action="Index">Назад к списку</a></div>
}
else
{
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Идентификатор
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Заказчик
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Сумма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
}