@model pr3_tradecompany_aspnet_mvc.Models.Enitites.Order

@{
    ViewData["Title"] = "Удаление заказа";
}

<h1>Заказ</h1>
<h4>Удаление</h4>

@if (Model is null)
{
	<p>Заказ с заданным id не найден!</p>
	<div><a asp-action="Index">Назад к списку</a></div>
}
else
{
    <h3>Вы уверены что хотите удалить запись?</h3>
<div>
    <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Идентификатор
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                Заказчик
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CompanyName)
            </dd>
            <dt class="col-sm-2">
                Дата
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                Сумма
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
}